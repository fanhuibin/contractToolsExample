{
  "designSystem": {
    "name": "Element Pro",
    "version": "1.0.0",
    "description": "一套为开发者、设计师和产品经理准备的桌面端组件库。",
    "tokens": {
      "colors": {
        "primary": {
          "main": "#409EFF",
          "light": "#66B1FF",
          "dark": "#3A8EE6",
          "text": "#FFFFFF"
        },
        "secondary": {
          "main": "#909399",
          "light": "#A6A9AD",
          "dark": "#82848A",
          "text": "#FFFFFF"
        },
        "text": {
          "primary": "#303133",
          "regular": "#606266",
          "secondary": "#909399",
          "placeholder": "#C0C4CC"
        },
        "background": {
          "page": "#F2F6FC",
          "component": "#FFFFFF",
          "hover": "#F5F7FA"
        },
        "status": {
          "success": "#67C23A",
          "warning": "#E6A23C",
          "danger": "#F56C6C",
          "info": "#909399"
        },
        "border": {
          "base": "#DCDFE6",
          "light": "#E4E7ED",
          "lighter": "#EBEEF5",
          "extra-light": "#F2F6FC"
        }
      },
      "typography": {
        "fontFamily": "'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif",
        "fontSize": {
          "extra-large": "20px",
          "large": "18px",
          "medium": "16px",
          "base": "14px",
          "small": "13px",
          "extra-small": "12px"
        },
        "fontWeight": {
          "light": 300,
          "regular": 400,
          "medium": 500,
          "bold": 700
        }
      },
      "spacing": {
        "base": "4px",
        "xs": "8px",
        "sm": "12px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px"
      },
      "borderRadius": {
        "none": "0px",
        "small": "2px",
        "base": "4px",
        "large": "8px",
        "round": "50%"
      },
      "shadows": {
        "light": "0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04)",
        "base": "0 2px 12px 0 rgba(0, 0, 0, 0.1)",
        "dark": "0 2px 8px rgba(0, 0, 0, .15)"
      }
    }
  },
  "components": {
    "button": {
      "default": {
        "backgroundColor": "colors.background.component",
        "color": "colors.text.regular",
        "borderColor": "colors.border.base",
        "hover": {
          "backgroundColor": "colors.primary.light",
          "color": "colors.primary.text",
          "borderColor": "colors.primary.light"
        }
      },
      "primary": {
        "backgroundColor": "colors.primary.main",
        "color": "colors.primary.text",
        "borderColor": "colors.primary.main",
        "hover": {
          "backgroundColor": "colors.primary.light",
          "borderColor": "colors.primary.light"
        }
      },
      "sizes": {
        "padding": {
          "small": "9px 15px",
          "medium": "10px 20px",
          "large": "12px 24px"
        },
        "fontSize": {
          "small": "typography.fontSize.extra-small",
          "medium": "typography.fontSize.base",
          "large": "typography.fontSize.medium"
        }
      }
    }
  }
}
